@model MusicPortal.WEB.Models.ViewModels.MusicVM
@{
    ViewData["Title"] = "Трек - " + Model.Name;
}
<main>
    <div class="container">
    <section>
        <h3>Music: @Model.Name</h3>
        <div>
            <a class="">Жанр: @Model.Genre</a><br />          
        </div>
            <div>
                <a class="">Релизе: @Model.Date</a><br />
            </div>
            <div class="audio-player">
                <audio id="audio-player" src="@wc.MusicPath@Model.filesMusic" type="audio/mp3" controls="controls"></audio>
            </div>
    </section>
    
    </div>
</main>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#audio-player').mediaelementplayer({
                alwaysShowControls: true,
                features: ['playpause', 'volume', 'progress'],
                audioVolume: 'horizontal',
                audioWidth: 400,
                audioHeight: 120
            });
        });
    </script>
}