@model MusicPortal.WEB.Models.ViewModels.AuthorVM

    <div class="col-lg-4 col-md-6 pb-4 filter @Model.NickName">
        <!-- Card-->
        <div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
            <div class="card-body px-3 pt-3 pb-1 row">
                <div class="col-7"><label class="float-left">@Model.NickName</label></div>  
            </div>
            <img class="card-img-top img-fluid d-block mx-auto mb-3" src="" alt="Card image cap">
            <div class="card-body p-1 px-3 row">
                <div class="col-6">
                <span class="badge p-2 border w-100" style="background-color:lavenderblush"><a class="text-dark">@(Model.Age.ToString().Split(" ")[0])</a></span>
                </div>
                <div class="col-6 border-0">
                <span class="badge p-2 border w-100" style="background-color:aliceblue"><a class="text-dark">@Model.mainGenre.ToString()</a></span>
                </div>
                
                <div class="col-6 p-1">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-dark form-control btn-sm p-2" style="height:40px">View Details</a>
                </div>
            <div class="col-6 p-1">
                <a asp-action="Subscribe" asp-route-id="@Model.Id" class="btn btn-info form-control btn-sm p-2" style="height:40px">Subscribe</a>
            </div>
            </div>
        </div>
    </div>